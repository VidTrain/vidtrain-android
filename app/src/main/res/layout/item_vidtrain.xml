<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivCollaborators"
        app:riv_corner_radius="25dp"
        app:riv_border_color="@android:color/white"
        app:riv_border_width="2dp"
        android:src="@drawable/user_icon"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="10dp"
        />

    <com.franklinho.vidtrain_android.models.DynamicHeightVideoPlayerManagerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vvPreview"
        android:layout_below="@+id/ivCollaborators"
        android:background="@android:color/black"
        />

    <ImageButton
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/heart_icon"
        android:layout_below="@id/vvPreview"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:id="@+id/ibtnLike"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ibtnLike"
        android:text="@string/likes"
        android:layout_alignTop="@id/ibtnLike"
        android:layout_alignBottom="@id/ibtnLike"
        android:gravity="center_vertical"
        android:textSize="22dp"
        android:id="@+id/tvLikeCount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvLikeCount"
        android:layout_alignParentRight="true"
        android:id="@+id/tvCommentCount"
        android:text="@string/comments"
        android:layout_alignTop="@id/ibtnLike"
        android:layout_alignBottom="@id/ibtnLike"
        android:gravity="center_vertical|right"
        android:textSize="22dp" />

</RelativeLayout>